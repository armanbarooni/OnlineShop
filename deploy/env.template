# OnlineShop Production Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
POSTGRES_DB=OnlineShop
POSTGRES_USER=onlineshop_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production

# JWT Configuration
JWT__ISSUER=OnlineShop
JWT__AUDIENCE=OnlineShopClient
JWT__SECRET=CHANGE_ME_TO_A_STRONG_SECRET_AT_LEAST_32_CHARACTERS_LONG

# CORS Configuration (comma-separated list)
# CORS__ALLOWFRONTEND__0=https://yourdomain.com
# CORS__ALLOWFRONTEND__1=https://www.yourdomain.com

# SMS Configuration
SMSSETTINGS__PROVIDER=SmsIr
SMSSETTINGS__APIKEY=YOUR_SMSIR_API_KEY
SMSSETTINGS__SENDER=10004346
SMSSETTINGS__OTPTEMPLATE=OnlineShopOTP
SMSSETTINGS__OTPEXPIRATIONMINUTES=5
SMSSETTINGS__OTPLENGTH=6

# SMS.ir Specific Configuration
SMSIR__APIKEY=YOUR_SMSIR_API_KEY
SMSIR__TEMPLATEID=325822
SMSIR__USESANDBOX=false
SMSIR__OTPPARAMNAME=CODE

# Docker Configuration
DOCKER_IMAGE=ghcr.io/YOUR_USERNAME/onlineshop:latest
GITHUB_REPOSITORY=YOUR_USERNAME/onlineshop

# VPS Configuration (for deployment script)
VPS_APP_DIR=/opt/onlineshop

# Seed Default Users (set to false in production)
SEED_DEFAULT_USERS=false

